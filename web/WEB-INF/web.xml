<?xml version='1.0' encoding='utf-8'?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
						http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0"
	metadata-complete="true">

	<display-name>BarleySNP</display-name>
	
	<servlet>
		<servlet-name>extractor</servlet-name>
		<servlet-class>jhi.snps.servlet.ExtractionServlet</servlet-class>
		<init-param>
			<param-name>bcfTools</param-name>
			<param-value>/home/tomcat/bcftools-1.5/bin/bcftools</param-value>
		</init-param>
		<init-param>
			<param-name>bcfFile</param-name>
			<param-value>/mnt/du-synology/v1shr2/wildcat-dev/wild_barley_GATK_variants.bcf</param-value>
		</init-param>
		<init-param>
			<param-name>tmpDir</param-name>
			<param-value>/mnt/du-synology/v1shr2/wildcat-dev/tmp</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>extractor</servlet-name>
		<url-pattern>/extractor/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Cranachan</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Cranachan</servlet-name>
		<url-pattern>/faces/*</url-pattern>
		<url-pattern>/datasets</url-pattern>
	</servlet-mapping>
	<context-param>
		<description>State saving method: 'client' or 'server' (=default). See JSF Specification 2.5.2</description>
		<param-name>javax.faces.STATE_SAVING_METHOD</param-name>
		<param-value>client</param-value>
	</context-param>
	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
		<param-value>resources.application</param-value>
	</context-param>
	<listener>
		<listener-class>com.sun.faces.config.ConfigureListener</listener-class>
	</listener>

	<resource-ref>
		<res-ref-name>jdbc/cranachan</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

</web-app>